{
  "private": true,
  "name": "web3",
  "description": "My collection of web3 exercises, all in one place, well separated",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js",
  "scripts": {
    "commit": "npx cz",
    "deploy": "npm run build && wrangler publish",
    "reinstall": "rm -rf node_modules package-lock.json && npm i",
    "postinstall": "remix setup cloudflare-workers",
    "build": "npm run build:css && npm run build:remix && npm run build:worker",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev": "concurrently \"npm run dev:remix\" \"npm run dev:miniflare\" \"npm run dev:css\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "dev:remix": "remix watch",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "dev:miniflare": "miniflare --build-command \"npm run dev:worker\" --watch",
    "abis:gen:types": "typechain --target=ethers-v5 '**/*.abi.json' --out-dir app/abis/types",
    "abis:gen": "sol-compiler",
    "ganache:start": "ganache-cli -d --db ganachedb",
    "geth:account": "geth --datadir=gethdb account new",
    "geth:start": "geth --datadir=gethdb --rpc --ws --dev --dev.period=2",
    "hardhat:deploy:wave": "hardhat run scripts/deploy.ts --network rinkeby"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/providers": "^5.5.2",
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.7",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@remix-run/dev": "^1.1.1",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^12.0.3",
    "esbuild": "0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.2",
    "hardhat-gas-reporter": "^1.0.7",
    "miniflare": "2.1.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "tailwindcss": "^3.0.15",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.4"
  }
}
